# ========================================
# HR Portal Environment Configuration
# EXAMPLE/TEMPLATE FILE - DO NOT COMMIT
# ========================================
# Copy this file to .env and update values
# for your specific environment

# API Configuration
# JSON Server URL for backend API endpoints
VITE_API_BASE_URL=http://localhost:3001

# Application Configuration
# Application name displayed in UI
VITE_APP_NAME=HR Portal

# Environment Type
# Options: development, staging, production
VITE_ENV=development

# Feature Flags
# Enable/disable experimental features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false

# Session Configuration
# Session timeout in milliseconds (30 minutes default)
VITE_SESSION_TIMEOUT=1800000

# Date Format Configuration
# Default date format for the application
VITE_DATE_FORMAT=MM/DD/YYYY

# Pagination
# Default number of items per page
VITE_ITEMS_PER_PAGE=10

# API Configuration
# Request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Logging
# Enable console logging in development
VITE_ENABLE_LOGGING=true
